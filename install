#!/bin/sh
#dotfiles=".ackrc .bash_aliases .bashrc .gitconfig .hgrc .synergy.conf .tmux.conf .vimrc"
dotfiles=".ackrc .bash_aliases .gitconfig .hgrc .synergy.conf .tmux.conf .vimrc"
cd $HOME
for f in $dotfiles; do
    ln -sf dotfiles/$f;
done;
